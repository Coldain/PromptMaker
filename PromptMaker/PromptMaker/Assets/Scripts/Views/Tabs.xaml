<UserControl x:Class="PromptMaker.Assets.Scripts.Views.Tabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PromptMaker.Assets.Scripts.Views"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal" >            
            <TextBlock Name="textName" Text="{Binding Title}" Background="{x:Null}" IsHitTestVisible="False" Foreground="White" TextTrimming="CharacterEllipsis" MaxWidth="100 "/>
            <Button Name="ButtonX" Content="X" Padding="0" Background="{x:Null}" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" Width="15" Height="15" Click="ButtonDeleteTab_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
